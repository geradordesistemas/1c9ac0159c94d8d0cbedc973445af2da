{% extends "@ApplicationProjectContent/base/base_web.html.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block javascriptsFooter %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 2%">
        <h2>{{ title }}</h2>

        <a href="{{ path("web_dashboard") }}" class="btn btn-secondary" >
            Voltar
        </a>
        <a href="{{ path('web_diaIndisponivelAgendamento_create') }}" class="btn btn-primary" >
            Cadastrar
        </a>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">data</th>
                <th scope="col">descricao</th>
                <th scope="col">feriado</th>
                <th scope="col">indisponivel</th>
            </tr>
            </thead>
            <tbody>
            {% for data in objects %}
                <tr>
                    <th scope="row">
                        {{ data.id }}
                    </th>
                    <td>
                        {{ data.data }}
                    </td>
                    <td>
                        {{ data.descricao }}
                    </td>
                    <td>
                        {{ data.feriado }}
                    </td>
                    <td>
                        {{ data.indisponivel }}
                    </td>
                    <td>
                        <a href="{{ path("web_diaIndisponivelAgendamento_show", { "id": data.id }) }}" class="btn btn-primary">
                            Exibir
                        </a>
                        <a href="{{ path("web_diaIndisponivelAgendamento_edit", { "id": data.id }) }}" class="btn btn-warning">
                            Editar
                        </a>
                        <a href="{{ path("web_diaIndisponivelAgendamento_delete", { "id": data.id }) }}" class="btn btn-danger" >
                            Deletar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}












